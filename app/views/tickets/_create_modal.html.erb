<div class="modal text-dark fade" id="create<%= status.parameterize %>Ticket" tabindex="-1" role="dialog" aria-labelledby="create<%= status.parameterize %>TicketLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="create<%= status.parameterize %>TicketLabel">Create a new Ticket</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for :ticket, url: project_sprint_tickets_path(project_id: project.id, sprint_id: project.current_sprint.id) do |f| %>
          <%= f.input :name %>
          <%= f.input :description, as: :text %>
          <%= f.input :hours_of_work %>
          <%= f.input :priority, collection: Ticket::PRIORITIES, default: 'Normal' %>
          <%= f.input :status, input_html: { value: status }, as: :hidden %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
