<div class="row">
  <div class="col-12">
    <a class="card text-white bg-success" href='#recapTicket' data-toggle="modal" data-target="#recapModal<%= ticket.id %>">
      <div class="card-body">
        <div class="card-title">
          <div class="row">
            <div class="col-8">
              <b><%= ticket.name %></b>
            </div>
            <div class="col-3">
              <div class="row">
                <%= render partial: 'tickets/prioritie_badge', locals: { priority: ticket.priority } %>
              </div>
              <div class="row">
                Hours: <%= ticket.hours_of_work %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>
</div>

<%= render partial: 'tickets/recap_modal', locals: { ticket: ticket } %>