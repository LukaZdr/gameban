<div class="card text-white bg-info">
  <div class="card-header">Achievements</div>
  <div class="card-body">
    <div class="row">
      <div class="col">
          <%   current_user.achievements.each do |achievement| %>
            <div class="alert alert-warning" role="alert">
              <div class="row">
                <div class="col-3">
                  image foo bar
                </div>
                <div class="col">
                  <div class="row">
                    <div class="col">
                      <b><%= achievement.name %></b>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <%= achievement.description %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>